<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="just">
		<jta-data-source>java:/datasources/justDs</jta-data-source>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<shared-cache-mode>ALL</shared-cache-mode>
		<properties>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.query.plan_cache_max_size" value="256"/>
			<property name="hibernate.search.default.directory_provider"
				value="filesystem" />
			<property name="hibernate.search.default.indexBase" value="/just/lucene/indexes" />
			<property name="org.hibernate.envers.audit_table_suffix"
				value="_history" />
				<property name="hibernate.cache.use_second_level_cache" value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
		</properties>
	</persistence-unit>
</persistence>
